@model MyShop.Core.ViewModels.DiscountListViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>DiscountInfo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            @Html.LabelFor(model => model.Discount.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Discount.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Discount.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Discount.Code, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Discount.Code, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Discount.Code, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Discount.ExpiryDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Discount.ExpiryDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Discount.ExpiryDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Discount.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Discount.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Discount.Amount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Discount.Percentage, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Discount.Percentage, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Discount.Percentage, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Discount.AppliedType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               <select name="Discount.AppliedType" id="Discount_AppliedType" class="form-control">
                    <option value="1" @(1 == Model.Discount.AppliedType ? "selected" : "")>Amount</option>
                    <option value="2" @(2 == Model.Discount.AppliedType ? "selected" : "")>Percentage</option>
                </select>
                @Html.ValidationMessageFor(model => model.Discount.AppliedType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Discount.ItemType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                <select name="Discount.ItemType" id="Discount_ItemType" class="form-control">
                    <option value="1" @(1 == Model.Discount.ItemType ? "selected" : "")>Product</option>
                    <option value="2" @(1 == Model.Discount.ItemType ? "selected" : "")>Category</option>
                </select>
                @Html.ValidationMessageFor(model => model.Discount.ItemType, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Discount.ItemId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="Discount.ItemId" id="Discount_ItemId" class="form-control">
                    @if (Model.Discount.ItemType == 2)
                    {
                        foreach (var category in Model.ProductCategories)
                        {
                            <option value="@category.Id" @(category.Id == Model.Discount.ItemId ? "selected" : "")>
                                @category.Category
                            </option>
                        }

                    }
                    else
                    {
                        foreach (var product in Model.Products)
                        {
                            <option value="@product.Id" @(product.Id == Model.Discount.ItemId ? "selected" : "")>
                                @product.Name
                            </option>
                        }

                    }


                </select>
                @Html.ValidationMessageFor(model => model.Discount.ItemId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Discount.Priority, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Discount.Priority, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Discount.Priority, "", new { @class = "text-danger" })
            </div>
        </div>


        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



<script type="text/javascript">

    $(function () {
        $("#Discount_ItemType").change(function () {
            var ItemType = $(this).val();
            var value = $('#Discount_Id').val();
            $.ajax({
                type: "GET",
                url: '/DiscountManager/getDate',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var str = "";

                    var Products = result.Products;
                    var categories = result.ProductCategories;
                    if (ItemType == 1) {
                        str = "";
                        for (var i = 0; i < Products.length; i++) {
                            str += "<option value = '" + Products[i].Id + "'>" + Products[i].Name + "</option>"
                        }
                    }
                    else {
                        str = "";
                        for (var i = 0; i < categories.length; i++) {
                            str += "<option  value='" + categories[i].Id + "'>" + categories[i].Category + "</option>"
                        }

                    }

                    $("#Discount_ItemId").html(str);
                   
                },
                error: function (result) {
                    console.log(result);
                }
            })




        })
    });
</script>
