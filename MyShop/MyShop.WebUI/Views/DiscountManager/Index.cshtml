@model MyShop.Core.ViewModels.DiscountListViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DiscountList.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiscountList.FirstOrDefault().Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiscountList.FirstOrDefault().ExpiryDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiscountList.FirstOrDefault().Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiscountList.FirstOrDefault().Percentage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiscountList.FirstOrDefault().AppliedType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiscountList.FirstOrDefault().ItemId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiscountList.FirstOrDefault().ItemType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiscountList.FirstOrDefault().Priority)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.DiscountList) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpiryDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Percentage)
        </td>
        <td>
            
            @if(item.AppliedType == 1)
            {
                <span>Amount</span>
            }
            else
            {
                <span>Percentage</span>
            }
        </td>
        <td>
            @if(item.ItemType == 1)
            {
                @Html.DisplayFor(modelItem => modelItem.Products.Where(s => s.Id == item.ItemId).FirstOrDefault().Name);
            }
            else
            {
                @Html.DisplayFor(modelItem => modelItem.ProductCategories.Where(s => s.Id == item.ItemId).FirstOrDefault().Category);
            }


        </td>
        <td>
            @if (item.ItemType == 1)
            {
                <span>Product</span>
            }
            else
            {
                <span>Category</span>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Priority)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
