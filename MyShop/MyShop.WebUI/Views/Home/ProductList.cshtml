@model MyShop.Core.ViewModels.ProductListViewModel

@{
    ViewBag.Title = "ProductList";
}

<div class="col-lg-12" style="text-align:center">
    <ul class="list-inline list-group" style="border: 1px solid #dedede;border-radius: 8px;">
        @foreach (var cat in Model.ProductCategories)
        {
            <li>
                @Html.ActionLink(cat.Category, "ProductList", new { Category = cat.Category }, new { @class = Request["Category"] == cat.Category ? "list-group-item active" : "list-group-item" })
            </li>
        }
    </ul>

</div>

<h2 id="productListHead">ProductList:</h2>

<h2 id="searchListHead" style="display:none">Total Search results: @Model.Products.Count()</h2>

<div class="col-md-12 productList">

    @foreach (var item in Model.Products)
    {


        <div class="col-md-3 product" style="margin:5px;padding:5px;border:1px solid #d4d4d4">

            <div class="col-md-12" style="text-align:center">
                <a href="@Url.Action("Details","Home", new {  Category = item.Category,id = item.Id  })" class="btn btn-default" style="height:80px;">
                    <img class="img" style="width: 100px;max-height:67px;" src="~/Content/ProductImages/@item.Image" />
                </a>
            </div>
            <div class="col-md-12" style="text-align:center">
                <strong>@Html.ActionLink(item.Name, "Details", new {  Category = item.Category, id = item.Id, })</strong>
            </div>
            
            <div class="col-md-12" >
                @if (@item.Description.Length > 50)
                {
                    <p title="@item.Description">@item.Description.Substring(0, 50)<span>...</span></p>
                }
                else
                {
                    <p title="@item.Description">@item.Description</p>
                }
                
            </div>
            <div class="col-md-12 ProductBtns">
                <h4 class="col-md-6 row">@item.Price</h4>
                <div class="col-md-16 row"><a href="@Url.Action("AddToBasket", "Basket", new { Id=item.Id })" class="btn btn-success">Add To Basket</a></div>
            </div>
        </div>
    }

</div>
<div class="col-md-12 clearfix" />