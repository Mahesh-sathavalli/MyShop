@model MyShop.Core.ViewModels.ProductListViewModel
@{
    ViewBag.Title = "Home Page";
}
<div class="col-lg-12" style="text-align:center">
    <ul class="list-inline list-group" style="border: 1px solid #dedede;border-radius: 8px;">
        @foreach (var cat in Model.ProductCategories)
        {
            <li>
                @Html.ActionLink(cat.Category, "ProductList", new { Category = cat.Id }, new { @class = Request["Category"] == cat.Id ? "list-group-item active" : "list-group-item" })
            </li>
        }
    </ul>

</div>
<div class="col-lg-12">
@if (@Model.Customer != null)
{
    <p style="font-size:36px;font-weight:500">Welcome  @Model.Customer.FirstName;</p>
}
else
{
    <p style="font-size:36px;font-weight:500">Welcome  User</p>
}

</div>

<h3>Shop By Categories</h3>

<div class="col-md-12">

    @foreach (var item in Model.ProductCategories)
    {

        <div class="col-md-2 row" style="height:185px;margin:5px;padding:5px;">
            <div class="col-md-12 categorycell" style="text-align:center">
                <a href="@Url.Action("ProductList","Home", new { Category = item.Id })" class="btn btn-default">

                    @if (@item.Image == null)
                    {
                        <img style="width: 100%;"src="~/Content/ProductImages/default/imageNotFound.png" />
                    }
                    else
                    {
                        <img style="width: 100%;" src="~/Content/ProductImages/@item.Image" />
                    }



                </a>
                <a href="@Url.Action("ProductList","Home", new { Category = item.Id })" style="color:black; font-weight:bold;" title="@item.Category">

                    @if (@item.Category.Length > 20)
                    {
                        <p>@item.Category.Substring(0, 20)<span>...</span></p>
                    }
                    else
                    {
                        <p>@item.Category</p>
                    }

                </a>
            </div>


        </div>
    }
</div>
<div class="col-md-12 clearfix"/>
