@model MyShop.Core.ViewModels.ProductDetailViewModel

@{
    ViewBag.Title = Model.Product.Name + " Details";
}

<div class="col-lg-12" style="text-align:center">
    <ul class="list-inline list-group" style="border: 1px solid #dedede;border-radius: 8px;">
        @foreach (var cat in Model.ProductCategories)
        {
            <li>
                @Html.ActionLink(cat.Category, "ProductList", new { Category = cat.Category }, new { @class = Request["Category"] == cat.Category ? "list-group-item active" : "list-group-item" })
            </li>
        }
    </ul>

</div>

<h2>@Html.DisplayFor(model=>model.Product.Name)</h2>

<div class="col-md-12" style="min-height:400px">
    <div class="col-md-2">
        <img class="img-responsive" src="~/Content/ProductImages/@Model.Product.Image"/>
    </div>
    <div class="col-md-10">
        <dl class="dl-horizontal">
          

            <dt>
                @Html.DisplayNameFor(model => model.Product.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Product.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Product.Price)
            </dt>

            <dd>
               

                @if (Model.ProductDiscount != null)
                {
                    <p ><del class="alert-danger">$@Model.Product.Price</del> @Model.ProductDiscount.discountedPrice</p>
                }
                else
                {
                    <p>$@Model.Product.Price</p>
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Product.InStock)
            </dt>
            <dd>
                $@Html.DisplayFor(model => model.Product.InStock)
            </dd>

            <dt></dt>
            <dd><a href="@Url.Action("AddToBasket", "Basket", new { Id=Model.Product.Id })" class="btn btn-success">Add To Basket</a></dd>

            <dt></dt>
            

            
        </dl>
    </div>
 </div>

<div class="col-md-12">

        <a href="@Url.Action("ProductList","Home", new { Category = Model.Product.Category })" style="color:black; font-weight:bold;">
            <p>Back to List</p>
        </a>
    
</div>

<div class="col-md-12 clearfix" />