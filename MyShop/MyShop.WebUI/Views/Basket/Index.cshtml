@model IEnumerable<MyShop.Core.ViewModels.BasketItemViewModel>

@{
    ViewBag.Title = "Basket";
}


<h2>Basket</h2>

<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quanity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            Line Total
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td><img style="height:50px" class="img" src="~/Content/ProductImages/@item.Image" /></td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
            @Html.Hidden("itemID",item.ProductID)
        </td>
        <td>
              <select style="width=45px" id="dropDown" class="selectDrop">
                  @for(int i = 1; i <= 10; i++)
                  {
                      <option value="@i">@i</option>
                  }
              </select>          
        </td>
        
        <td>
            @String.Format("{0:c}", item.Price)
        </td>
        <td>
            @String.Format("{0:c}", item.Price * item.Quanity)
        </td>
        <td>
            <a href="@Url.Action("RemoveFromBasket", "Basket", new { Id=item.Id })" class="btn btn-danger">Delete</a>
        </td>
    </tr>
}
    <tr>
        <td colspan="4" style="text-align:right"><strong>Basket Total</strong></td>
        <td>@String.Format("{0:c}", (from p in Model select p.Price * p.Quanity).Sum())</td>
        <td><a href="@Url.Action("Checkout", "Basket")"class="btn btn-primary">Checkout</a></td>
    </tr>

</table>

<script type="text/javascript">
    $(function () {
        $('.selectDrop').change(function () {
            var val = $(this).val;
        })
    });
    $(function () {
        $("#dropDown").change(function () {
            var value = $("#itemID").val();
            var selectedQuantity = $("#dropDown").val();
            $.ajax({
                type:"POST",
                url: '@(Url.Action("IncreaseQuantity", "Basket"))',
                data: {
                    'Id': value,
                    'quantity': selectedQuantity},
                success: function (result) {
                    return result;
                },
                error: function (result) {
                    console.log(result);
                }
            })
        })
    });
</script>